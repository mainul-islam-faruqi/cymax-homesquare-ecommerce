	"item": [
		{
			"name": "Get implicit token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Get accessToken', function (){",
							"    const json = pm.response.json()",
							"    const d = json.hasOwnProperty(\"data\") ? json.data : json",
							"    const accessToken = Array.isArray(d) ? d[0].access_token : d.access_token",
							"    pm.collectionVariables.set(\"ACCESS_TOKEN\", accessToken)",
							"    pm.collectionVariables.set('ACCESS_TOKEN_EXPIRES', json.expires)",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "x-moltin-auth-store",
						"value": "{{STORE_ID}}",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "",
						"value": "",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "client_id",
							"value": "{{CLIENT_ID}}",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "implicit",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{API_DOMAIN}}/oauth/access_token",
					"host": [
						"{{API_DOMAIN}}"
					],
					"path": [
						"oauth",
						"access_token"
					]
				}
			},
			"response": []
		},
